<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.raizlabs.universalfont.sample.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.raizlabs.universalfontwidgets.widgets.UniversalFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Roboto Defaults"/>

        <com.raizlabs.universalfontwidgets.widgets.UniversalFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:universalFont="Roboto.Bold"/>


        <com.raizlabs.universalfontwidgets.widgets.UniversalFontButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"
            app:universalFont="Roboto.Italic"/>

        <com.raizlabs.universalfontwidgets.widgets.UniversalFontRadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Radio Button"
            app:universalFont="Roboto.Regular"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.raizlabs.universalfontwidgets.widgets.UniversalFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Custom"/>

        <com.raizlabs.universalfontwidgets.widgets.UniversalFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:customFont="@string/custom_font"/>


        <com.raizlabs.universalfontwidgets.widgets.UniversalFontButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"
            app:customFont="@string/custom_font"/>

        <com.raizlabs.universalfontwidgets.widgets.UniversalFontRadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Radio Button"
            app:customFont="@string/custom_font"/>
    </LinearLayout>

</LinearLayout>
